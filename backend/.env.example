NODE_ENV=development
PORT=5000
DISABLE_IAP_VALIDATION=true

# Use SQLite for local development (no database setup needed)
USE_MYSQL=false

# Google Cloud Configuration (for development, these are optional)
GCP_PROJECT_ID=looply-dev-481412
GCP_KEY_FILE=./service-account-key.json
GCP_REGION=us-central1

# Cloud Storage Configuration
GCS_BUCKET_NAME=looply-videos-looply-dev-481412

# Pub/Sub Configuration
PUBSUB_TOPIC=container-analysis-notes-v1
PUBSUB_SUBSCRIPTION=

# Vertex AI Configuration
# VERTEX_AI_MODEL_ID=powerplaystream_1764668948865

# JWT Configuration
JWT_SECRET=dev-secret-key-for-development-only-change-in-production
JWT_EXPIRY=7d

# API Configuration
REACT_APP_API_URL=https://looply-backend-687745071178.us-central1.run.app

# Application URL (for embed links and redirects)
APP_URL=http://localhost:3000

# Microservices Configuration (for Cloud Run deployment)
# Set FRONTEND_URL to your frontend Cloud Run service URL
# Example: https://powerplay-frontend-xxxxx.a.run.app
FRONTEND_URL=https://looply-frontend-687745071178.us-central1.run.app

# ============================================================
# SECURITY & VIRUS SCANNING CONFIGURATION
# ============================================================

# Option 1: VirusTotal API (Cloud-based scanning)
# Get free API key at: https://www.virustotal.com/gui/my-apikey
# Free tier: 4 requests/minute, 500 requests/day
VIRUSTOTAL_API_KEY=

# Option 2: ClamAV (Local daemon scanning)
# Install: docker run -d -p 3310:3310 clamav/clamav
# Or: apt-get install clamav clamav-daemon (Linux)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Option 3: Google Safe Browsing API (optional enhancement)
# Get API key from Google Cloud Console
GOOGLE_SAFE_BROWSING_KEY=

# Security Settings
# Maximum file size for video uploads (in bytes, default: 500MB)
MAX_VIDEO_FILE_SIZE=524288000

# Maximum file size for captions (in bytes, default: 50MB)
MAX_CAPTION_FILE_SIZE=52428800

# Virus scanning mode: 'virustotal' | 'clamav' | 'heuristic' | 'all'
# 'all' tries VirusTotal -> ClamAV -> Heuristic in order
SECURITY_SCAN_MODE=all

# Enable detailed security logging
SECURITY_DEBUG_MODE=false